#Contact.section.mcb-section{:style => "padding-top:0px; padding-bottom:40px"}
  .section_wrapper.mcb-section-inner
    .wrap.mcb-wrap.one.valign-top.clearfix
      .mcb-wrap-inner
        .column.mcb-column.one.column_column
          .column_attr.clearfix.align_center.animate{"data-anim-type" => "fadeIn", :style => "padding:80px 0% 40px; border-radius: 8px"}
            %h4.themecolor{:style => "margin-bottom: 6px"} Lest Talk
            %h2 Resquest for consultation
            %hr.no_line{:style => "margin: 0 auto 20px"}/
            #contactWrapper
              = simple_form_for @message, url: app_new_message_path do |f|
                / One Second (1/2) Column
                .column.one-second
                  %input#name{"aria-invalid" => "false", "aria-required" => "true", :name => "message[name]", :placeholder => "Your name", :size => "40", :type => "text"}/
                / One Second (1/2) Column
                .column.one-second
                  %input#email{"aria-invalid" => "false", "aria-required" => "true", :name => "message[to_emails]", :placeholder => "Your e-mail", :size => "40", :type => "email"}/
                .column.one
                  %input#subject{"aria-invalid" => "false", :name => "message[subject]", :placeholder => "Subject", :size => "40", :type => "text"}/
                .column.one
                  %textarea#body{"aria-invalid" => "false", :name => "message[content]", :placeholder => "Message", :rows => "5", :style => "width:100%;"}
                .column.one.buttons
                  .g-recaptcha{"data-sitekey" => "6Lc8crQUAAAAAISxwXXI52LcgDtA5plGv_SYkkSD"}
                  = f.button :submit, "Send A Message", class: "submit"
                 
              .content-details
                .contact-info
                  %h4.themecolor{:style => "margin-bottom: 6px"} Contact Details
                  %ul.content-details__ul
                    %li
                      .icon-holder
                        %i.fa.fa-location-arrow
                      .text-holder
                        %p
                          Address: Houston, Tx. United States
                          
                    %li
                      .icon-holder
                        %i.fa.fa-phone
                      .text-holder
                        %p
                          Phone: + 713 5606 940
                    %li
                      .icon-holder
                        %i.fa.fa-envelope
                      .text-holder
                        %p Email: Sacredtouchhealing77@gmail.com

