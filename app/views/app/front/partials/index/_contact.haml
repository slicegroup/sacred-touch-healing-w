#Contact.section.mcb-section{:style => "padding-top:0px; padding-bottom:40px"}
	.section_wrapper.mcb-section-inner
		.wrap.mcb-wrap.one.valign-top.clearfix
			.mcb-wrap-inner
				.column.mcb-column.one.column_column
					.column_attr.clearfix.align_center.animate{"data-anim-type" => "fadeIn", :style => "padding:80px 0% 40px; border-radius: 8px"}
						%h4.themecolor{:style => "margin-bottom: 6px"} Lest Talk
						%h2 Resquest for consultation
						%hr.no_line{:style => "margin: 0 auto 20px"}/
						#contactWrapper
							= simple_form_for @message, url: app_new_message_path do |f|
								/ One Second (1/2) Column
								.column.one-second
									%input#name{"aria-invalid" => "false", :name => "message[name]", :placeholder => "Your name", :size => "40", :type => "text", required: 'required'}/
								/ One Second (1/2) Column
								.column.one-second
									%input#email{"aria-invalid" => "false", :name => "message[to_emails]", :placeholder => "Your e-mail", :size => "40", :type => "email", required: 'required'}/
								.column.one
									%input#subject{"aria-invalid" => "false", :name => "message[subject]", :placeholder => "Subject", :size => "40", :type => "text", required: 'required'}/
								.column.one
									%textarea#body{"aria-invalid" => "false", :name => "message[content]", :placeholder => "Message", :rows => "5", :style => "width:100%;", required: 'required'}
								.column.one.buttons
									-# .g-recaptcha{"data-sitekey" => "6Lc8crQUAAAAAISxwXXI52LcgDtA5plGv_SYkkSD"}
									= recaptcha_tags
									= f.button :submit, "Send A Message", class: "submit"
								 
							.content-details
								.contact-info
									%h4.themecolor{:style => "margin-bottom: 6px"} Contact Details
									%ul.content-details__ul
										%li
											.icon-holder
												%i.fa.fa-location-arrow
											.text-holder
												%p
													Address: Houston, Tx. United States
													
										%li
											.icon-holder
												%i.fa.fa-phone
											.text-holder
												%p
													Phone: + 713 5606 940
										%li
											.icon-holder
												%i.fa.fa-envelope
											.text-holder
												%p Email: Sacredtouchhealing77@gmail.com

- if flash[:notice].eql?('Mensaje enviado')
	%p.name= flash[:message_name]
	:javascript
		var name = $('.name').text().split(' ')[0]
		swal({
			type: 'success',
			title: `¡Gracias, ${name}!`,
			text: 'Tu mensaje ha sido enviado, pronto te contactaremos.',
			footer: '<a href>Why do I have this issue?</a>'
		})
- if flash[:recaptcha_error].eql?("Oh! It's error with reCAPTCHA!")
	:javascript
		swal({
			type: 'error',
			title: '¡Lo siento!',
			text: 'Hubo un error en el reCAPTCHA, tu mensaje no ha sido enviado.',
			footer: '<a href>Why do I have this issue?</a>'
		})
:javascript

	function recaptcha_callback(){
			// alert('callback working');
			if (($('#name').val() != '')
				&& ($('#body').val() != '')
				&& ($('#email').val() != '')
				&& ($('#subject').val() != '')) {
				$('.send').prop('disabled', false);
			} else {
				swal('Completa todos los campos');
				grecaptcha.reset();
			}
		}

	$('.keppler-custom-field input, textarea').removeClass('form-control');
	
	$("#new_message").validate({
		event: "blur",
		errorClass: "error-class",
		validClass: "valid-class",
		rules: {																																																																																																																																									
			'message[name]': { required: true},
			'message[to_emails]': { required: true, email: true },
			'message[subject]': { required: true},
			'message[content]': { required: true},
			'message[type_message]': { required: true }
		},
		messages: {
			'message[name]': 'Por favor indica tu nombre',
			'message[to_emails]': 'Introduce un email válido',
			'message[subject]': 'introduce un subject valido',
			'message[content]': 'Introduce un mensaje breve',
			'message[type_message]': 'Type message blank'
		},
		debug: true,errorElement: "label",
		submitHandler: function(form){
		form.submit();
		}
	});

