.container-fluid
  .row
    .listing.col-lg-12.col-xs-12
      %section.content
        .row
          .col-md-3
            = render 'keppler_contact_us/admin/layouts/compose'
            = render 'keppler_contact_us/admin/layouts/folders'
            = render 'keppler_contact_us/admin/layouts/labels'
          .col-md-9
            #settings
              .container-fluid
                #action-section
                  = simple_form_for @object, url: admin_contact_us_setting_update_path(@object), method: :put do |f|
                    .row
                      .col-lg-12
                        .box.slice-box
                          .box-header.with-border
                            %h3.box-title
                              = t('keppler.sidebar-menu.setting-submenu.email-setting-smtp')
                            .box-tools.pull-right
                              %a.btn.btn-box-tool{ 'data-widget': 'collapse', type: 'button' }
                                %i.icon-minus
                          .box-body.pure-input
                            = f.input :messages_to, label: t('keppler-contact-us.attributes.to_emails'), placeholder: t('keppler-contact-us.actions.insert_email'), as: :string, input_html: { 'data-role': 'multiemail' }, class: 'form-control bootstrap-tagsinput'
                            .pull-right
                              = f.button :submit, t('keppler.actions.apply'), class: 'btn-primary'
= javascript_include_tag '/assets/keppler_contact_us/plugins/bootstrap-tagsinput/multiple-email.js'
:javascript
  $('#setting_messages_to ').multiEmail()