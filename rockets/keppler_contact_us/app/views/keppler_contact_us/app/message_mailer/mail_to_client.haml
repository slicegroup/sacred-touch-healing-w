        // box-shadow: 2px 2px 2px #aaa
        cursor: pointer
        font-family: sans-serif
        font-size: 15px
        line-height: 15px
        text-decoration: none
        padding: 13px 17px
        color: #fff
        display: block
        border-radius: 20px
        border: 0
        transition: .3s
        &:hover, &:focus, &:active
