    -# Styles
    :sass
      @import url('https://fonts.googleapis.com/css?family=Patua+One')
      @import url('https://fonts.googleapis.com/css?family=Source+Sans+Pro')
      @import url('https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900')
      .mailer-body
        color: #383a34
        //font-family: 'Watchword'
        font-family: sans-serif
        margin: 0
        .mailer
          padding: 50px 0
          width: 100%
          background-image: url(http://i66.tinypic.com/k0gjmh.png), linear-gradient(to bottom, #242d4b 0%, #1e2b40 60%, #fff 60%)
          background-repeat: no-repeat
          background-size: contain
          background-position: center
          margin: 0 auto
          &-logo
            .logo
              width: 400px
              margin-bottom: 10px
              @media (max-width: 600px)
                width: 300px
          &-card
            background: white
            box-shadow: 0 2px 2px 0 rgba(0, 0, 0, .14), 0 1px 5px 0 rgba(0, 0, 0, .12), 0 3px 1px -2px rgba(0, 0, 0, .2)
            max-width: 800px
            margin: 0 auto
            padding: 40px 5%
            width: 90%
            &-header
              h1, h2, h3, h4, h5, h6, hr
                margin-bottom: 10px
              @media (max-width: 600px)
                h1
                  font-size: 1.5rem
                h2
                  font-size: 1rem
            &-body
              padding: 20px
              .email-container
                max-width: 680px
                margin: 0 auto

                table
                  margin: 0 auto
                  padding-bottom: 10px
                  @media (max-width: 600px)
                    font-size: 12px
                .buttons
                  margin: 20px
                  .btn
                    background: #00b4e1
                    padding: 10px 20px
                    border-radius: 2px
                    color: #fff !important
                    text-decoration: none
                    box-shadow: 2px 2px 2px #aaa
                    transition: .3s
                    &:hover
                      box-shadow: 3px 3px 3px #aaa
                      transition: .3s
            &-footer
              width: 100%
              // font-family: Montserrat
              @media (max-width: 600px)
                font-size: 12px
              a
                text-decoration: none
                color: #f44336
                font-weight: 600
      .separator
        width: 50%
        background: linear-gradient(to right, #31547a, #2e315e)
        border: none
        height: 5px
      .primary-txt
        color: #f44336
      .primary-bg
        background: linear-gradient(to right, #31547a, #2e315e)
      .center
