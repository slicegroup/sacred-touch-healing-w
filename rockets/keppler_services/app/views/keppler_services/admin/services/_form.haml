= simple_form_for [:admin, :services, @service] do |f|
  .container
    .row
      .col-lg-2
        = link_to admin_services_services_path, 'data-position': 'bottom', 'data-tooltip': t('keppler.actions.back') do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler.actions.back')

    .row
      .col-lg-12
        .box.slice-box
          .box-header.with-border
            %h3.box-title= t('keppler.models.pluralize.services').humanize
            .box-tools.pull-right
              %a.btn.btn-box-tool{'data-widget': 'collapse', type: 'button'}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .col-xs-12
                    = f.input :title, as: :string
                  .col-xs-12
                    = f.input :description_en, as: :ckeditor, input_html: { ckeditor: { toolbar: 'mini' } }, label: "Descripción en inglés"
                  .col-xs-12
                    = f.input :description_es, as: :ckeditor, input_html: { ckeditor: { toolbar: 'mini' } }, label: "Descripción en español"
                  .col-xs-12
                    = f.input :images, as: :keppler_file, multiple: true, label: "Imagenes" # , max_size: 225 
                  .col-xs-12
                    .pull-right
                      = f.button :submit, t('keppler.actions.save'), name: '_save', class: 'btn-primary'
                      = f.button :submit, t('keppler.actions.save_and_add_another'), name: '_add_other'
